<% layout('layouts/layout') %>

<h1>Change Password</h1>

<% if (notice && notice.length > 0) { %>
  <div class="flash-message"><%= notice %></div>
<% } %>

<form action="/account/change-password" method="POST">
  <label for="account_password">New Password</label>
  <input type="password" id="account_password" name="account_password" required pattern="(?=.*\d)(?=.*[A-Z])(?=.*[!@#$%^&*]).{12,}">
  <p class="form-hint">
    Password must be at least 12 characters and include 1 uppercase letter, 1 number, and 1 special character.
  </p>

  <button type="submit" class="btn">Change Password</button>
</form>