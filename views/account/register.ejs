<!-- views/account/register.ejs -->
<div class="wrapper">
  <main>
    <h1>Register</h1>

    <div class="form-container login-box">
      <form action="/account/register" method="post">
        <div class="form-group">
          <label for="account_firstname">First Name:</label>
          <input type="text" id="account_firstname" name="account_firstname" required />
        </div>

        <div class="form-group">
          <label for="account_lastname">Last Name:</label>
          <input type="text" id="account_lastname" name="account_lastname" required />
        </div>

        <div class="form-group">
          <label for="account_email">Email:</label>
          <input type="email" id="account_email" name="account_email" required />
        </div>

        <div class="form-group">
          <label for="account_password">Password:</label>
          <input
            type="password"
            id="account_password"
            name="account_password"
            required
            minlength="12"
            pattern="(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9])[\s\S]{12,}"
          />
          <p class="form-note">
            Passwords must be minimum of 12 characters and include 1 capital letter,
            1 number and 1 special character.
          </p>
        </div>

        <div class="form-group">
          <button type="submit" class="submit-btn">Register</button>
        </div>

        <p>Already have an account? <a href="/account/login">Login</a></p>
      </form>
    </div>
  </main>
</div>